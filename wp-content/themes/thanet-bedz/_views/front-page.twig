{% extends "_layout/base.twig" %}

{% block content %}

    {% include "_components/why-choose-us.twig" %}

    {% include "_components/category-buckets.twig" with {
        title: "Shop by category",
        buckets: topProductCats,
    } %}

    {% include "_components/reviews-section.twig" %}
    
    {% include "_components/products.twig" with {
        title: "Some title here about <span class='font-bold text-primary-bright'>how good</span> our products are",
        sideTitle: "Featured products",
        products: featured,
        btnText: "Shop all",
        btnLink: "/product-category/featured/"
    } %}

    {% include "_components/category-buckets.twig" with {
        title: "Shop by room",
        buckets: roomProductCats,
    } %}

    {% include "_components/stores.twig" with {
        background: 'white'
    } %}

    {% include "_components/gallery.twig" with {
        gallery: topProductCats,
    } %}

    {% include "_components/main-content.twig" with {
        title: post.meta('h1')|default(post.title),
        content: post.content|default(false),
        buttons: post.meta('copy_buttons')|default(false),
        utility_links: true,
    } %}

{% endblock %}