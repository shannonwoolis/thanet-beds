<section class="py-8 md:py-12 lg:py-16">
    <div class="container flex flex-wrap">
        <div class="w-full lg:w-1/3">
            <span class="mb-6 h2">{{ options.reviews_title }}</span>
            <div class="copy">{{ options.reviews_copy }}</div>
            <div class="hidden lg:inline-block">
                {% include "_components/button.twig" with {
                    text: "See more reviews",
                    link: "/reviews/",
                    classes: "mt-4"
                } %}
            </div>
            <div class="mt-4 lg:mt-16">{% include "_components/logos-clients.twig" %}</div>
        </div>
        <div class="flex flex-wrap w-full mt-4 xs:-mx-4 lg:-mt-4 lg:mx-0 lg:w-2/3 lg:pl-8">
            {% for item in reviews %}
                {% include "_components/review.twig" with {
                    stars: item.stars,
                    highlight: item.highlight,
                    content: item.content,
                    title: item.title,
                    index: loop.index
                } %}
            {% endfor %}
        </div>
        {% include "_components/button.twig" with {
            text: "See more reviews",
            link: "/reviews/",
            classes: "mt-4 lg:hidden"
        } %}
    </div>
</section>