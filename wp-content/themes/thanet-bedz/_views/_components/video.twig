<div class="relative cursor-pointer group video-popup-trigger" tabindex="0">
    <span class="sr-only">Open video</span>
    {# <img class="w-full lazyload" src="" data-src="{{ video_placeholder|resize(600,600) }}" alt="Video placeholder"> #}
    {% include "_components/picture.twig" with {
        source: Image(video_placeholder),
        lazyload: true,
        pictureClasses: 'w-full',
        breakpoints: {
            "1px" : {
                w: 600,
                h: 600,
                crop: 'center'
            },
        },
        img: {
            classes: 'w-full lazyload',
            w: 600,
            h: 600,
            crop: 'center',
            alt: "Video placeholder"
        }
    } %}
    <span class="absolute flex items-center justify-center w-24 h-16 text-white transition transform -translate-x-1/2 -translate-y-1/2 bg-black pointer-events-none group-hover:scale-110 bg-opacity-80 top-1/2 left-1/2">{{ fn('icon','play','w-8 h-8') }}</span>
    {% if video_title %}<span class="absolute bottom-0 left-0 w-full p-2 text-center text-white bg-black pointer-events-none bg-opacity-80">{{ video_title }}</span>{% endif %}

</div>

<div class="video-popup">
    <span class="loader"></span>
    <div class="wistia_responsive_padding" style="padding:56.25% 0 0 0;position:relative;">
        <div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;">
            <iframe tabindex="0" src="" data-src="{{ video_src }}" title="Thanet Bedz Video" allow="autoplay; fullscreen" allowtransparency="true" frameborder="0" scrolling="no" class="wistia_embed" name="wistia_embed" msallowfullscreen width="100%" height="100%"></iframe>
        </div>
    </div>
</div>
<div class="modal-underlay" tabindex="0"><span class="sr-only">Close video</span></div>