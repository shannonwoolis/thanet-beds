{% if videos %}
    <div class="py-8 bg-grey-light md:py-12 lg:py-12">
        <div class="container relative flex flex-wrap sm:flex-nowrap">
            <div class="w-full sm:w-auto text-vertical-left bar-right bar-black bg-grey-light"><span class="bg-grey-light">Videos</span></div>
            
            <div class="flex flex-wrap -mx-2 w-full-2 sm:w-auto lg:-mx-4">
                {% for video in videos %}
                    <div class="w-1/2 p-2 lg:p-4 md:w-1/4">
                        {% include "_components/video.twig" with {
                            video_src: video.video_src,
                            video_placeholder: video.video_placeholder.url,
                        } %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}