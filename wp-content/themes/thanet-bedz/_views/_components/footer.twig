<div class="py-8 bg-primary md:py-12">
    <div class="container flex flex-wrap items-center justify-between lg:flex-nowrap ">
        <span class="w-full text-white h3 lg:w-1/4 lg:!mb-0">Sign up to our newsletter</span>

        <form class="flex flex-wrap items-center justify-between w-full hf-form sm:flex-nowrap lg:justify-end lg:w-3/4 lg:pl-4">
            <p class="w-full pb-2 sm:pr-4 sm:pb-0 sm:w-2/5">
                <label class="sr-only">Name *</label>
                <input type="text" name="Name" placeholder="Name *" required/>
            </p>
            
            <p class="w-full pb-2 sm:pr-4 sm:pb-0 sm:w-2/5">
                <label class="sr-only">Email *</label>
                <input type="email" name="Email" placeholder="Email *" required/>
            </p>

            <button type="submit" class="min-w-[169px] btn btn-primary-light">Sign up now {{ fn('icon','caret-right') }}</button>
        </form>
    </div>
</div>

<footer class="py-8 text-white bg-primary-dark md:py-12 lg:py-16">

	<div class="container flex flex-wrap">

		<div class="flex flex-col w-full mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Contact</span>
            <span class="my-1">{% do action('ald_default', false) %}</span>
			<a class="my-1" href="mailto:{{options.site_email}}">{{options.site_email}}</a>
            <div class="my-1 text-lg">{% include "_components/social-links.twig" with {linkClasses:'hover:text-primary-lightest'} %}</div>
		</div>

        <div class="flex flex-col w-1/2 mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Products</span>
            {% for item in topProductCats %}
                {% set link = fn('get_term_link',item.term_id) %}
                <a class="my-1" href="{{ link }}">{{ item.name }}</a>
            {% endfor %}
		</div>

        <div class="flex flex-col w-1/2 mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Shop by Room</span>
            {% for item in roomProductCats %}
                {% set link = fn('get_term_link',item.term_id) %}
                <a class="my-1" href="{{ link }}">{{ item.name }}</a>
            {% endfor %}
		</div>

        <div class="flex flex-col w-1/2 mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Stores</span>
            {% for item in stores %}
                {% if item.status == "publish" %}
                    <a class="my-1" href="{{ item.link }}">{{ item.title }}</a>
                {% else %}
                    <span class="my-1">{{ item.title }}</a>
                {% endif %}
            {% endfor %}
		</div>

        <div class="flex flex-col w-1/2 mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Company</span>
            {% for item in secondaryMenu.items %}
                <a class="my-1 {{ item.class }}" href="{{ item.url }}">{{ item.name }}</a>
            {% endfor %}
		</div>
        
        <div class="flex flex-col w-1/2 mb-8 text-sm font-light lg:w-1/6 sm:w-1/3">
			<span class="mb-3 text-base font-bold text-primary-lightest">Account</span>
            <a href="/my-account/" class="my-1">My Account</a>
            <a href="/basket/" class="my-1">Basket</a>
            <a href="/wishlist/" class="my-1">Favourites</a>
		</div>

        <div class="w-1/2 sm:hidden">{% include "_components/credit-cards.twig" %}</div>

        <div class="flex flex-wrap items-center justify-between w-full">
            <p class="w-full text-sm opacity-75 sm:w-1/2 md:w-2/3">&copy; {{ 'now' | date('Y') }} {{site.title}}. {{ options.reg_number ? ('Registered number: ' ~ options.reg_number ~ '.') }}{{ options.vat_number ? (' VAT number: ' ~ options.vat_number ~ '. ') }}<a href="/privacy-policy/">Privacy Policy.</a> <a href="/cookie-policy/">Cookies Policy.</a></p>
            <div class="justify-end hidden sm:flex sm:w-1/2 md:w-1/3">{% include "_components/credit-cards.twig" %}</div>
        </div>

	</div>

</footer>
<div class="opacity-30"></div>
<a id="back-top" class="fixed z-50 px-2 pt-1 pb-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 rounded-sm opacity-0 bottom-2 left-2 hover:bg-gray-800" href="javascript:">
	<span class="text-xs text-white no-underline">
		{{ function('icon', 'angle-up', 'w-6 h-6') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>
