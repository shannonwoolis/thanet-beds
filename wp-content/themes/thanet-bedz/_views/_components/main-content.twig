<div class="container flex-wrap flex-grow py-8 md:py-12 lg:py-16 lg:flex">

    <main class="lg:w-2/3 lg:pr-16">

        <article class="copy">

            <h1 class="block">{{ title }}</h1>

            {{ content }}

        </article>

        {% if buttons %}
            {% for btn in buttons %}
                {% include "_components/button.twig" with {
                    link: btn.button.url,
                    text: btn.button.title,
                    target: btn.button.target,
                    tracking: false,
                    colour: (loop.index is odd ? 'primary-dark' : 'primary-light'),
                    classes: 'mt-5 mr-2'
                } only %}
            {% endfor %}
        {% else %}
            {% include "_components/button.twig" with {
                link: '/about-us/',
                text: 'About us',
                tracking: false,
                colour: 'primary-dark',
                classes: 'mt-5 mr-2'
            } only %}
            {% include "_components/button.twig" with {
                link: '/our-stores/',
                text: 'Our stores',
                tracking: false,
                colour: 'primary-light',
                classes: 'mt-5 mr-2'
            } only %}
        {% endif %}

    </main>

    <aside class="flex flex-wrap -mx-4 lg:-my-4 lg:w-1/3">

        {% if utility_links %}

            <div class="w-full p-4 lg:w-full md:w-1/3">
                {% include "_components/info-card.twig" with {
                    title: 'Delivery',
                    copy: 'Donec sollicitudin molestie malesuada. Curabitur aliquet quam id dui posuere blandit. Vestibulum ac diam sit amet quam vehicula.',
                    link: '/delivery/',
                    icon: 'box',
                } %}
            </div>
            
            <div class="w-full p-4 lg:w-full md:w-1/3">
                {% include "_components/info-card.twig" with {
                    title: 'Returns',
                    copy: 'Donec sollicitudin molestie malesuada. Curabitur aliquet quam id dui posuere blandit. Vestibulum ac diam sit amet quam vehicula.',
                    link: '/returns/',
                    icon: 'return',
                } %}
            </div>

        {% else %}

            <div class="p-4"><img class="lazyload" src="" data-src="{{ thumb|resize(800,800) }}"></div>

        {% endif %}

        <div class="w-full p-4 lg:w-full md:w-1/3">
            {% include "_components/info-card.twig" with {
                title: 'Reviews',
                copy: 'Donec sollicitudin molestie malesuada. Curabitur aliquet quam id dui posuere blandit. Vestibulum ac diam sit amet quam vehicula.',
                link: '/reviews/',
                icon: 'star',
            } %}
        </div>

    </aside>

</div>