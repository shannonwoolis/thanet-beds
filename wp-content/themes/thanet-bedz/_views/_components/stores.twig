<section class="py-8 md:py-12 lg:py-16 bg-{{ background }}">
    <div class="container relative flex flex-wrap sm:flex-row-reverse sm:flex-nowrap">
        <div class="w-full text-black bg-{{ background }} bar-black sm:w-auto text-vertical-right bar-right"><span class="text-black bg-{{ background }}">Our stores</span></div>
        <div class="w-full">
            <div class="flex flex-wrap justify-between w-full sm:flex-nowrap">
                <span class="h2">Come and <span class="font-bold text-primary-light">try our products</span> in person</span>
                <div class="hidden text-right sm:block sm:mt-0 sm:w-48">
                    {% include "_components/button.twig" with {
                        text: "Contact us",
                        link: "/contact/",
                        colour: 'primary-light'
                    } %}
                </div>
            </div>
            <div class="flex flex-wrap w-full">
                <div class="flex flex-wrap w-full -mx-4 lg:mr-4 w-full-4 lg:-ml-4 lg:w-2/3">
                    {% for item in stores %}
                        <div class="w-full p-4 md:w-1/2">
                            <div class="flex flex-col items-start h-full p-8 border-l-8 border-primary {{ background == 'white' ? 'bg-grey-light' : 'bg-white' }}">
                                <span class="block">Kent Beds & Sofas</span>
                                <span class="h2">{{ item.title }}</span>
                                <span class="flex text-sm my-1.5">{{ fn('icon','map-marker-alt','text-lg min-w-6 mr-2') }} {{ item.address }}</span>
                                <span class="flex text-sm my-1.5 transition hover:text-primary">{{ fn('icon','phone-flipped','text-lg min-w-6 mr-1 ml-1') }} {% if item.ld_name %}{% do action('ald_single', item.ld_name, false) %}{% else %}{% do action('ld_default', false) %}{% endif %}</span>
                                {% if item.status == "publish" %}
                                    {% include "_components/button.twig" with {
                                        text: "Find out more",
                                        link: item.link,
                                        colour: 'primary-light',
                                        classes: 'mt-4'
                                    } %}
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="relative w-full mt-4 mb-2 overflow-hidden map lg:my-4 min-h-80 lg:w-1/3">
                    <iframe class="absolute left-0 w-full h-map top-[-54px]" src="https://www.google.com/maps/d/u/0/embed?mid=1KBPt4R1PUbHfHRwTOPNZUPku70lCzN_d&ehbc=2E312F" draggable="false" width="100%" height="100%"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>