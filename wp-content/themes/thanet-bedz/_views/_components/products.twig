<div class="py-8 text-white bg-primary-dark md:py-12 lg:py-16">
    <div class="container relative flex flex-wrap sm:flex-row-reverse sm:flex-nowrap">
        <div class="w-full text-white sm:w-auto text-vertical-right bar-right bg-primary-dark"><span class="text-white bg-primary-dark">{{ sideTitle }}</span></div>
        <div class="w-full">
            <div class="flex flex-wrap items-center justify-between sm:flex-nowrap">
                <span class="!mb-0 h2">{{ title }}</span>
                {% if btnLink %}
                    <div class="mt-4 text-right sm:mt-0 sm:w-48">
                        {% include "_components/button.twig" with {
                            text: btnText,
                            link: btnLink,
                            colour: 'primary-light'
                        } %}
                    </div>
                {% endif %}
            </div>
            <div class="flex flex-wrap mt-8 -mx-2 ">
                {% for item in products %}
                    {% set link = fn('get_permalink',item.id) %}
                    {% set thumbID = fn('get_post_thumbnail_id',item.id) %}
                    {% set thumb = fn('wp_get_attachment_url',thumbID) %}
                    <div class="w-full p-2 lg:w-1/4 xs:w-1/2">
                        <div class="text-black bg-white border-t-8 border-primary-light">
                            {# <pre>{{dump(item.custom)}}</pre> #}
                            <a href="{{ link }}" class=""><img class="object-contain object-center w-full h-48 px-4 pt-4 lazyload" data-src="{{ thumb|resize(500) }}"></a>
                            <div class="p-4 md:p-6">
                                <a href="{{ link }}" class="block text-lg font-medium tracking-wide uppercase">{{ item.name }}</a>
                                <div class="block mt-2 text-sm font-light leading-5 text-grey-dark">{{ item.post_excerpt|truncate(15) }}</div>
                            </div>
                            <div class="flex items-center justify-between bg-grey-light">
                                {% set price = item.custom._price %}
                                <span class="inline-block px-5 font-medium bg-grey-light">Â£{{ '.' in price ? price : (price ~ '.00') }}</span>
                                <a href="{{ site.link }}/?add-to-cart={{ item.id }}&quantity=1" class="btn btn-primary-light">Add to basket {{ fn('icon','plus') }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>