<div class="flex-col items-start w-full py-4 xs:px-4 xl:px-8 xs:w-1/2 md:w-1/3 {% if index and index == 3 %}hidden xs:flex{% elseif index and index <= 2 %}hidden md:flex{% else %}flex{% endif %}">
    <span class="">
        {% for i in 1..stars %}
            {{ fn('icon','star','text-primary-bright') }}
        {% endfor %}
    </span>
    <span class="mt-2 text-xl font-medium">“{{ highlight }}”</span>
    <div class="mt-1 text-sm font-light leading-6">{{ content }}</div>
    <span class="mt-2 text-xs text-grey-dark">- {{ title }}</span>
</div>