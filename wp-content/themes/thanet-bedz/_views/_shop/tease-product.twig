<div class="w-full p-4 product xs:w-1/2 lg:w-1/4">

	<div class="h-full text-black bg-white">
		
		{{ fn('timber_set_product', post) }}

        {# <div class="w-full p-2 lg:w-1/4 xs:w-1/2"> #}
            <div class="relative flex flex-col flex-wrap h-full text-black bg-white border-t-8 border-primary-light">
                {% set thumbID = fn('get_post_thumbnail_id',post.id) %}
                {% set thumb = fn('wp_get_attachment_url',thumbID) %}
                {# <a href="{{ post.link }}" class="block"> #}
                    {# {% do action('woocommerce_before_shop_loop_item_title') %} #}
                {# </a> #}
                <a href="{{ post.link }}" class="block transition-all duration-500 transform hover:scale-110"><img class="object-contain object-center w-full h-48 px-4 pt-4 lazyload" data-src="{{ thumb|resize(500) }}"></a>

                <div class="p-4 md:p-6">
                    <a href="{{ post.link }}" class="block font-medium leading-tight hover:text-primary">{{ post.title }}</a>
                    <div class="block mt-2 text-sm font-light leading-5 text-grey-dark">{{ post.post_excerpt|truncate(15)|striptags }}</div>
                </div>
                <div class="flex items-center justify-between mt-auto bg-grey-light">
                    {% set price = post.custom._price %}
                    <span class="inline-block px-5 font-medium bg-grey-light">
                        {% if price %}
                            {% if price is iterable %}
                                <span class="block -mb-2 text-[0.6rem] uppercase">From</span>
                                £{{ '.' in price.0 ? price.0 : (price.0 ~ '.00') }}
                            {% else %}
                                £{{ '.' in price ? price : (price ~ '.00') }}
                            {% endif %}
                        {% else %}
                            {% do action( 'woocommerce_after_shop_loop_item_title' ) %}
                        {% endif %}
                    </span>
                    {# {% do action( 'woocommerce_after_shop_loop_item' ) %} #}
                    <a href="{{ site.link }}/?add-to-cart={{ post.id }}&quantity=1" data-quantity="1" class="button btn btn-primary-light product_type_simple add_to_cart_button ajax_add_to_cart" data-product_id="{{ post.id }}" data-product_sku="" rel="nofollow" class="btn btn-primary-light">Add to basket {{ fn('icon','plus') }}</a>
                    {# <a href="{{ site.link }}/?add-to-cart={{ item.id }}&quantity=1" class="btn btn-primary-light">Add to basket {{ fn('icon','plus') }}</a> #}
                </div>
            </div>
        {# </div> #}

	</div>
	
</div>
